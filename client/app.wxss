/**app.wxss**/
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  font-size: 16px;
  text-align: left;
} 
.konghang {
  width: 100%;
  height: 5px;
}
.all-title {
  padding-left: 10px;
  width: 100%;
  height: 40px;
  line-height: 40px;
  font-size: 16px;
  font-weight: bold;
  border-bottom: 1px solid #ccc;
  background-color: #fff;
}
.all-title image {
  position: relative;
  left: 5px;
  top: 3px;
  width: 20px !important;
  height: 20px;
}
page {
  background-color: #eee;
}

.no-data {
  width: 100%;
  height: 100px;
  line-height: 100px;
  font-size: 22px;
  color: #aaa;
  font-weight: bold;
  text-align: center;
  letter-spacing: 10px;
}