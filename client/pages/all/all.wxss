/* client/pages/all/all.wxss */
.container {
  height: 100%;
  background: #eee;
}
.every-commod {
  display: flex;
  flex-direction: row;
  justify-content: center;
  width: 94%;
  margin-top: 8px; 
  padding: 10px 0px;
  background-color: #fff;
  border-radius: 8px;
}
.every-commod-left {
  flex: 5;
  text-align: center;
}
.every-commod-left image {
  width: 100px;
  height: 100px;
  border-radius: 5px;
  vertical-align: top;
  border: 1px solid #ccc;
}
.every-commod-right {
  flex: 5;
  padding-left: 20px;
  height: 100px;
}
.every-commod-right text {
  display: block;
  height: 33px;
  line-height: 33px;
  font-size: 16px;
}
.every-commod-right button {
  margin-top: 5px;
}